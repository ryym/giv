{
  "name": "giv",
  "productName": "Giv",
  "private": true,
  "version": "0.0.0",
  "description": "GitHub Notification Viewer",
  "main": "main.js",
  "author": "ryym <ryym.64@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development npm run clean-dist && node scripts/watch.js",
    "lint": "run-s lint:js lint:ts lint:css:fix lint:css",
    "lint:js": "eslint --fix .",
    "lint:ts": "tslint --fix -t stylish 'renderer/**/*.ts?(x)'",
    "lint:css": "stylelint 'renderer/**/*css'",
    "lint:css:fix": "stylefmt -r 'renderer/**/*css'",
    "clean-dist": "rm -rf dist",
    "release": "NODE_ENV=production run-s build install-dist-deps package",
    "install-dist-deps": "cd dist && npm install --save-prod && cd ../",
    "build": "npm clean-dist && run-p build:main build:rend",
    "build:main": "webpack --config webpack/webpack.main.js",
    "build:rend": "webpack --config webpack/webpack.renderer.js",
    "package": "electron-packager --overwrite dist"
  },
  "devDependencies": {
    "@types/react": "^15.0.23",
    "@types/react-dom": "^15.5.0",
    "@types/react-redux": "^4.4.40",
    "@types/react-router-redux": "^5.0.1",
    "@types/redux-logger": "2.10.0",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-react": "^6.23.0",
    "clean-webpack-plugin": "^0.1.16",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.27.3",
    "electron": "^1.6.2",
    "electron-packager": "^8.6.0",
    "eslint": "^3.18.0",
    "eslint-config-ryym": "^1.4.0",
    "eslint-plugin-react": "^6.10.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "npm-run-all": "^4.0.2",
    "postcss": "^5.2.16",
    "postcss-loader": "^1.3.3",
    "postcss-nested": "^1.0.0",
    "postcss-scss": "^0.4.1",
    "postcss-simple-vars": "^3.0.0",
    "react-router-dom": "^4.0.0",
    "react-router-redux": "next",
    "style-loader": "^0.14.1",
    "stylefmt": "^5.3.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "tslint": "^5.2.0",
    "tslint-eslint-rules": "^4.0.0",
    "typescript": "^2.3.2",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.2"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "electron-json-storage": "^3.0.1",
    "history": "^4.6.1",
    "normalizr": "^3.2.2",
    "octicons": "^5.0.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "react-router": "^4.0.0",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.2",
    "redux-saga": "^0.14.3"
  }
}
